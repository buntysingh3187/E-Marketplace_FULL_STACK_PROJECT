# Database Configuration
MONGO_URI=mongodb://localhost:27017/emarket

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production

# Server Configuration
PORT=5000

# CORS Configuration
# For local: http://localhost:5173
# For production: Use wildcard pattern to allow all deployment URLs
# Example: https://your-project-name-*.vercel.app (matches all random deployment URLs)
CORS_ORIGIN=http://localhost:5173,https://your-project-name-*.vercel.app

# Frontend URL (for email links, redirects, etc.)
FRONTEND_URL=http://localhost:5173

# Node Environment
NODE_ENV=development
